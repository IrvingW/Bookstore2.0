<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.OrderItem" table="OrderItem">
        <id name="orderItemID" column="orderitem_id">
            <generator class="native"/>
        </id>
        <property name="bookID" column="book_id" />
        <property name="bookAmount" column="book_amount" />
        <property name="bookPrice" column="book_price" />
        <property name="orderID" column="order_id" />
    </class>
</hibernate-mapping>